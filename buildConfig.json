{
    "apiVersion": "v1beta1",
    "kind": "BuildConfig",
    "labels": {
        "name": "activator-centos7-build"
    },
    "metadata": {
        "name": "activator-centos7-build"
    },
    "output": {
        "tag": "latest",
        "to": "ticketfly/activator-centos7-repository"
    },
    "parameters": {
        "source": {
            "contextDir": ".",
            "git": {
                "ref": "master",
                "uri": "https://github.com/pat2man/activator-builder.git"
            },
            "type": "Git"
        },
        "strategy": {
            "customStrategy": {
                "env": [
                    {
                        "name": "IMAGE_NAME",
                        "value": "ticketfly/activator-centos7"
                    }
                ],
                "exposeDockerSocket": true,
                "image": "openshift/sti-image-builder"
            },
            "type": "Custom"
        }
    },
    "triggers": [
        {
            "github": {
                "secret": "2JgE7hh5qGpx_gc4f6FT"
            },
            "type": "github"
        },
        {
            "generic": {
                "secret": "VoEmks0jS3gNK2d8STPe"
            },
            "type": "generic"
        }
    ]
}
